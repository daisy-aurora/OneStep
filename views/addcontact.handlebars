	<body style="background-color: white" class="no-skin">
		<div style="padding:12px" class="row">
			<div class="col-xs-12">
				<!-- PAGE CONTENT BEGINS -->
				<form class="form-horizontal" role="form">
					<h3>Add individual/organization contact information:</h3>
					<div class="form-group">
						<label class="col-sm-3 control-label no-padding-right"> Name </label>

						<div class="col-sm-9">
							<input type="text" placeholder="Name" class="col-xs-10" />
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-3 control-label no-padding-right"> Location </label>

						<div class="col-sm-9">
							<input type="text" placeholder="Location" class="col-xs-10" />
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-3 control-label no-padding-right"> Email </label>

						<div class="col-sm-9">
							<input type="text" placeholder="Email" class="col-xs-10" />
						</div>
					</div>
					
					<div class="form-group">
						<label class="col-sm-3 control-label no-padding-right"> Phone </label>

						<div class="col-sm-9">
							<div class="input-group">
								<input class="form-control input-mask-phone" type="text" id="form-field-mask-2" />
							</div>
						</div>
					</div>
					
					<div class="space-4"></div>
					
					<h4>Add individual affiliated with the organization (if applicable):</h4>
					
					<div id="contact">
						<p>Add new contact:</p>
						<div class="form-group">
							<label class="col-sm-3 control-label no-padding-right"> Name </label>
	
							<div class="col-sm-9">
								<input type="text" placeholder="Name" class="col-xs-10" />
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-3 control-label no-padding-right"> Email </label>
		
							<div class="col-sm-9">
								<input type="text" placeholder="Email" class="col-xs-10" />
							</div>
						</div>
						
						<div class="form-group">
							<label class="col-sm-3 control-label no-padding-right"> Phone </label>
		
							<div class="col-sm-9">
								<div class="input-group">
									<input class="form-control input-mask-phone" type="text" id="form-field-mask-2" />
								</div>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-3 control-label no-padding-right"> Notes </label>
		
							<div class="col-sm-9">
								<textarea placeholder="Notes" class="autosize-transition form-control" style="width:83.333%;"></textarea>
							</div>
						</div>
					</div>
				</form>
				
				<button id="addmoreuser" class="btn btn-info">Add more user</button>
				<hr />
				<button id="save" class="btn btn-success">Save</button>
				<button id="close" class="btn btn-danger">Cancel</button>
			</div><!-- /.col -->
		</div><!-- /.row -->

